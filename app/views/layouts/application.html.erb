<!DOCTYPE html>
<html >
	<head>
		<title>
			StickyNote
		</title>
		<%= stylesheet_link_tag    "application", :media => "all" %>

		<%= javascript_include_tag "application" %>


		<%= csrf_meta_tags %>
		<script src="http://code.jquery.com/jquery-1.9.1.js"></script>
		<link rel="stylesheet" href="http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css" />
	 	<script src="http://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
	 	<!--used in order to pass user authentication in AJAX  calls-->
	 	<script> $(document).ajaxSend(function(e, xhr, options) {
  			var token = $("meta[name='csrf-token']").attr("content");
  			xhr.setRequestHeader("X-CSRF-Token", token);
			});
	 	</script>
	</head>
	
	<body >
		<div class="wrapper">
		<div class="row-fluid" id="header_bar" style="height:150" >
		<div class="span2"></div>
			<div class="span7" style="height:150px; margin:0px">
				<div style="height:150px">
				<!-- LOGO-->
				<h1 style="line-height:150px;vertical-align:middle">Post Its</h1>
				</div>
			</div>
			<div class="span3" style="margin:0px;float:right">
				<div id="login" class="navbar nav ">
					<ul class="nav navbar-inner" style="float:right;margin:0px">
						<% if user_signed_in? %>
							<li class="nav  logging">
						  		<%= link_to('Logout', destroy_user_session_path, :method => :delete) %>       
						  	</li>
						<% else %>
						  	<li class="nav logging">
						  		<%= link_to('Login', new_user_session_path)  %>  
							</li>
							<li class="divider"></li>
							<li class="nav logging">
		  						<%= link_to('Sign up', new_user_registration_path)  %>
		  					</li>
						<% end %>
					</ul>
				</div>
			</div>
		</div>
		
		<div class="row-fluid" style= "background-color:#adafb2">
			<div class="span12">
				<div>
					<div  id="main_nav" class="navbar nav">
						<ul class="nav navbar-inner" style="width:100%">
							<li style="margin-left:12%">
								<a href="/" class="nav_item nav">Home</a>
							</li>
						</ul>
					</div>
				</div>
			</div>

		</div>
	
		<div class="row-fluid" style="height:1000px;background-color:#adafb2">
			<div class="span2" id="side-bar">
			</div>
			<div class="span10" style="margin:0px;padding:0px;height:100%">
				<div style="margin:0px;height:100%;width:100%" id = "mainThing">
					<%= yield %>
				</div>
			</div>
		</div>
	</body>
</html>